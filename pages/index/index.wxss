/**index.wxss**/
.image-container{
  height: 500rpx;
  background-color: #888;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-scroll{
    position: relative;
    height: 200rpx;
    background: #FD9494;
}
.imgCover-container{
  display: flex;
  align-items: center;
}
.imgCover-content{
  margin-right: 10rpx;
}
.imgCover-item{
  background-color: red;
  width: 200rpx;
  height: 200rpx;
}
.image-btn-wapper{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.image-btn{
  width: 178rpx;
  font-size: 28rpx;
  border-color: #FD9494;
  color: #FD9494;
}

.image-check-wapper{
  margin-top: 40rpx;
}
.image-check-item{
  display: flex;
  margin: 20rpx 10rpx;
}
.img-check-color{
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.check-circle{
  margin: 0 30rpx;
  width: 40rpx;
  height: 40rpx;
  display: block;
  background-color: rosybrown;
  border-radius: 90px;
}